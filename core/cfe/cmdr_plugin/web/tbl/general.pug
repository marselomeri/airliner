
.row.os-theme-dark                
  article.col-xs-12.col-sm-12
    header
      span.widget-icon
        i.fa.fa-table
      h2 General
    div.widget-body.table-responsive
      table.table.table-condensed
        tbody
          tr
            th Cmd Count
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.CmdCounter'}],indicator:'text'}) ---
            td
              button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_Noop'}, indicator:'cmd'}) NoOp
          tr
            th Cmd Error Count
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.ErrCounter'}],indicator:'text'}) ---
            td
              button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_Reset'}, indicator:'cmd'}) Counter Reset
          tr
            th Number of Tables
            td 
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.NumTables'}],indicator:'text'}) ---
            td
          tr
            th Pending updates
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.NumLoadPending'}],indicator:'text'}) ---
            td
          tr
            th Validations
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.ValidationCtr'}],indicator:'text'}) ---
            td
          tr
            th Last CRC
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.LastValCrc', format:'0x%08x'}],indicator:'text'}) ---
            td
          tr
            th Last Valid Table
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.LastValTableName'}],indicator:'text'}) ---
            td
          tr
            th Last Validation
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.LastValStatus'}],indicator:'text'}) ---
            td
          tr
            th Active Buffer
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.ActiveBuffer'}],indicator:'text'}) ---
            td
          tr
            th Successful Validations
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.SuccessValCtr'}],indicator:'text'}) ---
            td
          tr
            th Failed Validations
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.FailedValCtr'}],indicator:'text'}) ---
            td
          tr
            th Validation Requests
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.NumValRequests'}],indicator:'text'}) ---
            td
          tr
            th Free Shared Buffers
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.NumFreeSharedBufs'}],indicator:'text'}) ---
            td
          tr
            th Last Updated Table
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.LastUpdatedTbl'}],indicator:'text'}) ---
            td
          tr
            th Last File Loaded
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.LastFileLoaded'}],indicator:'text'}) ---
            td
          tr
            th Last File Dumped
            td
              span(data-cdr={tlm:[{name:'/CFE/CFE_TBL_HkPacket_t/Payload.LastFileDumped'}],indicator:'text'}) ---
            td
    footer
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_LoadCmd_t'}, indicator:'cmd'}) Load
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_AbortLdCmd_t'}, indicator:'cmd'}) Abort Load
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_DumpCmd_t'}, indicator:'cmd'}) Dump
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_ValidateCmd_t'}, indicator:'cmd'}) Validate
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_ActivateCmd_t'}, indicator:'cmd'}) Activate
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_DumpRegCmd_t'}, indicator:'cmd'}) Dump Reg
      button.btn.cdr-primary(data-cdr={cmd: {name: '/CFE/CFE_TBL_DelCDSCmd_t'}, indicator:'cmd'}) Delete CDS
