    var Position = {Lat: 0, Lon: 0, Alt: 0};
    var Attitude = {Yaw: 0, Pitch: 0, Roll: 0};
    var HUDCount = 0;
    var HUDStarted = false;

    //flyToLocation();

    /* Heads Up Display */

    var draw;
    var bgOpacity = 0.5;
    var curHeading = 0;
    var curPitch = 0;
    var curRoll = 0;
    var curAltitude = 0.0;
    var textHeading;
